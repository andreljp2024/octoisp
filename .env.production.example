NODE_ENV=production

# URLs públicas
FRONTEND_URL=https://octoisp.seudominio.com
ALLOWED_ORIGINS=https://octoisp.seudominio.com
INTEGRATION_ALLOWLIST=seudominio.com,api.seusistema.com

# Supabase (produção)
SUPABASE_URL=https://xxxxxxxx.supabase.co
SUPABASE_ANON_KEY=coloque_sua_anon_key
SUPABASE_JWT_SECRET=coloque_sua_chave_jwt

# Banco transacional e métricas (TimescaleDB)
DATABASE_URL=postgresql://usuario:senha@host:5432/octoisp
METRICS_DB_URL=postgresql://usuario:senha@host:5432/metrics

# Redis / filas
REDIS_URL=redis://usuario:senha@host:6379

# Serviços simulados (use apenas em staging)
ALLOW_SIMULATION=false

# Certificados TLS (Let’s Encrypt)
LETSENCRYPT_ENABLED=false
LETSENCRYPT_EMAIL=
LETSENCRYPT_DOMAINS=

# Assistente de instalação via web
SETUP_WIZARD_ENABLED=false
SETUP_WIZARD_TOKEN=defina_um_token_forte
SETUP_HOST_DIR=/caminho/absoluto/do/projeto

# Serviços internos (opcional se remoto)
TR069_SERVICE_URL=http://tr069-acs:7547
GRAFANA_URL=https://grafana.seudominio.com

# Rate limiting (API Gateway)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200
RATE_LIMIT_TENANT_MAX=300

# Variáveis para build do frontend (Vite)
VITE_API_URL=/api
VITE_AUTH_MODE=supabase
VITE_ALLOW_DEMO_LOGIN=false
VITE_SUPABASE_URL=https://xxxxxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=coloque_sua_anon_key
VITE_GRAFANA_URL=https://grafana.seudominio.com
